
<div class="cs-style-5 display_hidden nude">
  <figure class="display_hidden_trigger">
    <img class="item_thumb" width="150px" src="{{ image.secure_url }}" alt="al"/>
    <figcaption>
      <h3>{{title}}</h3>
      <span>{{content.band}}</span>
      <a href="#" class="trigger_text">expand [+]</a>
    </figcaption>
  </figure>

  <!-- album description-->
  <div class="hidden albumdesc">
    <h3 class="item_name">{{content.band}} - {{title}}</h3>
    {{#if audioOneMp3.filename}}
      <div style="margin: 1em 0;">
      <p style="margin-bottom: 4px">{{audioOneName}}</p>
      <audio
        controls
        src="audio/{{audioOneMp3.filename}}"
      >
        your browser does not support audio
      </audio>
      </div>
    {{/if}}
    {{#if audioTwoMp3.filename}}
      <div style="margin: 0 0 1em 0;">
        <p style="margin-bottom: 4px">{{audioTwoName}}</p>
        <audio       
          controls
          src="audio/{{audioTwoMp3.filename}}"
        >
          your browser does not support audio
        </audio>
      </div>
    {{/if}}
    <p>{{{content.description}}}</p>
    <div class="lablecode">
      <p>{{content.labelcode}}</p>
      <a class="item_add" target="_blank" href="{{content.link}}">Kaufen</a>
    </div>
  </div>
</div>
